procedure TPembayaran.Button1Click(Sender: TObject);
begin
  DataModule1.ADOQuery17.Close();
  DataModule1.ADOQuery17.SQL.Clear();
  DataModule1.ADOQuery17.SQL.Add('select * From PEMBAYARAN ');

  DataModule1.ADOQuery17.SQL.Add('where 1=1');

  if (CheckBox1.Checked) then
  begin
    DataModule1.ADOQuery17.SQL.Add('and ID_PEMBAYARAN like :ID_PEMBAYARAN');
    DataModule1.ADOQuery17.Parameters.ParamByName('ID_PEMBAYARAN').Value := EDit1.Text;
  end;
  if (CheckBox2.Checked) then
  begin
    DataModule1.ADOQuery17.SQL.Add('and ID_PEMBELANJAAN like :ID_PEMBELANJAAN');
    DataModule1.ADOQuery17.Parameters.ParamByName('ID_PEMBELANJAAN').Value := EDit2.Text;
  end;
  if (CheckBox3.Checked) then
  begin
    DataModule1.ADOQuery17.SQL.Add('and METODE like :METODE');
    DataModule1.ADOQuery17.Parameters.ParamByName('METODE').Value := EDit3.Text;
  end;
  if (CheckBox4.Checked) then
  begin
    DataModule1.ADOQuery17.SQL.Add('and TANGGAL_PEMBAYARAN like :TANGGAL_PEMBAYARAN');
    DataModule1.ADOQuery17.Parameters.ParamByName('TANGGAL_PEMBAYARAN').Value := EDit4.Text;
  end;
  if (CheckBox5.Checked) then
  begin
    DataModule1.ADOQuery17.SQL.Add('and TOTAL_PEMBAYARAN like :TOTAL_PEMBAYARAN');
    DataModule1.ADOQuery17.Parameters.ParamByName('TOTAL_PEMBAYARAN').Value := EDit5.Text;
  end;
  DataModule1.ADOQuery17.SQL.Add('order by ID_PEMBAYARAN asc');
  DataModule1.ADOQuery17.Open;
end;

