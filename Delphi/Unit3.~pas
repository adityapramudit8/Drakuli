procedure TProduk.Button1Click(Sender: TObject);
begin
  DataModule1.ADOQuery7.Close();
  DataModule1.ADOQuery7.SQL.Clear();
  DataModule1.ADOQuery7.SQL.Add('select * From PRODUK ');

  DataModule1.ADOQuery7.SQL.Add('where 1=1');

  if (CheckBox1.Checked) then
  begin
    DataModule1.ADOQuery7.SQL.Add('and ID_PRODUK like :ID_PRODUK');
    DataModule1.ADOQuery7.Parameters.ParamByName('ID_PRODUK').Value := EDit1.Text;
  end;
  if (CheckBox2.Checked) then
  begin
    DataModule1.ADOQuery7.SQL.Add('and NAMA_PRODUK like :NAMA_PRODUK');
    DataModule1.ADOQuery7.Parameters.ParamByName('NAMA_PRODUK').Value := EDit2.Text;
  end;
  if (CheckBox3.Checked) then
  begin
    DataModule1.ADOQuery7.SQL.Add('and HARGA like :HARGA');
    DataModule1.ADOQuery7.Parameters.ParamByName('HARGA').Value := EDit3.Text;
  end;
  if (CheckBox4.Checked) then
  begin
    DataModule1.ADOQuery7.SQL.Add('and ID_PENJUAL like :ID_PENJUAL');
    DataModule1.ADOQuery7.Parameters.ParamByName('ID_PENJUAL').Value := EDit4.Text;
  end;
  if (CheckBox5.Checked) then
  begin
    DataModule1.ADOQuery7.SQL.Add('and ID_PEMBELI like :ID_PEMBELI');
    DataModule1.ADOQuery7.Parameters.ParamByName('ID_PEMBELI').Value := EDit5.Text;
  end;
  DataModule1.ADOQuery7.SQL.Add('order by ID_PRODUK asc');
  DataModule1.ADOQuery7.Open;
end;

procedure TProduk.Button2Click(Sender: TObject);
begin
  with DataModule1.ADOQuery8 do
  begin
    SQL.Clear();
    SQL.Add('insert into PRODUK(NAMA_PRODUK,HARGA,ID_PENJUAL,ID_PEMBELI) values(:NAMA_PRODUK,:HARGA,:ID_PENJUAL,:ID_PEMBELI)');
    Parameters.ParamByName('NAMA_PRODUK').Value := Edit7.Text;
    Parameters.ParamByName('HARGA').Value := Edit8.Text;
    Parameters.ParamByName('ID_PENJUAL').Value := Edit9.Text;
    Parameters.ParamByName('ID_PEMBELI').Value := Edit10.Text;
    ExecSQL();
end;
  DataModule1.ADOQuery7.Close();
  DataModule1.ADOQuery7.Open();
end;



procedure TProduk.Button4Click(Sender: TObject);
begin
with DataModule1.ADOQuery8 do
  begin
    SQL.Clear();
    SQL.Add('update PRODUK set NAMA_PRODUK=:NAMA_PRODUK,HARGA=:HARGA,ID_PENJUAL=:ID_PENJUAL,ID_PEMBELI=:ID_PEMBELI');
    SQL.Add('where ID_PRODUK=:ID_PRODUK');
    Parameters.ParamByName('ID_PRODUK').Value := Edit6.Text;
    Parameters.ParamByName('NAMA_PRODUK').Value := Edit7.Text;
    Parameters.ParamByName('HARGA').Value := Edit8.Text;
    Parameters.ParamByName('ID_PENJUAL').Value := Edit9.Text;
    Parameters.ParamByName('ID_PEMBELI').Value := Edit10.Text;
    ExecSQL();
  end;
  DataModule1.ADOQuery7.Close();
  DataModule1.ADOQuery7.Open();
end;

procedure TProduk.Button3Click(Sender: TObject);
begin
  with DataModule1.ADOQuery8 do
  begin
    SQL.Clear();
    SQL.Add('delete from PRODUK where ID_PRODUK = :ID_PRODUK');
    Parameters.ParamByName('ID_PRODUK').Value := Edit6.Text;
    ExecSQL();
  end;
  DataModule1.ADOQuery7.Close();
  DataModule1.ADOQuery7.Open();
end;

